<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrowBackImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/calendar_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/yearMonthTextView"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        app:layout_constraintStart_toEndOf="@id/arrowBackImageView"
        app:layout_constraintTop_toTopOf="@id/arrowBackImageView"
        app:layout_constraintBottom_toBottomOf="@id/arrowBackImageView"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/pretendard_bold"
        tools:text="2024년 4월"
        android:textSize="20sp"
        android:textColor="@color/gray_scale_700"/>
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrowFrontImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/calendar_arrow_right"
        app:layout_constraintStart_toEndOf="@id/yearMonthTextView"
        app:layout_constraintTop_toTopOf="@id/arrowBackImageView"
        app:layout_constraintBottom_toBottomOf="@id/arrowBackImageView"
        android:layout_marginStart="16dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/closeImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/arrowBackImageView"
        app:layout_constraintBottom_toBottomOf="@id/arrowBackImageView"
        android:layout_marginBottom="4dp"
        android:src="@drawable/x_image"
        android:layout_marginEnd="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>