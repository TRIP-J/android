<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ContinentText">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>

    </style>


    <style name="CountryButton">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">48dp</item>
        <item name="background">@null</item>
        <item name="android:clipToOutline" tools:targetApi="s">true</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="calendarWeekdayStyle">
        <item name="android:textColor">@color/gray_scale_400</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="calendarDateStyle">
        <item name="android:textColor">@color/gray_scale_700</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="calendarHeaderStyle">
        <item name="android:textColor">@color/gray_scale_700</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="CustomBottomNav">
        <item name="itemTextAppearanceActive">@style/BottomNavigationSelectedItem</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationNotSelectedItem</item>
    </style>

    <style name="BottomNavigationSelectedItem" parent="Widget.Material3.BottomNavigationView">
        <item name="android:textColor">@color/gray_scale_800</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="BottomNavigationNotSelectedItem" parent="Widget.Material3.BottomNavigationView">
        <item name="android:textColor">@color/gray_scale_600</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/pretendard_medium</item>
    </style>

</resources>

    